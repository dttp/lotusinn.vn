<script src="~/app/components/House/houseCtrl.js"></script>

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    House management
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="/">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">House</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->

<!-- BEGIN PAGE CONTENT-->
<div class="row" ng-controller="houseCtrl" ng-init="init()">
    <script type="text/ng-template" id="confirmDeleteModal.html">
        <div class="modal-header">
            <h3 class="modal-title">Confirmation!</h3>
        </div>
        <div class="modal-body">
            Are you sure you want to delete this house and all related info?
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()">Yes</button>
            <button class="btn default" type="button" ng-click="cancel()">No</button>
        </div>
    </script>

    <div class="col-md-12 col-sm-12 col-xs-12">
        <button type="button" class="btn green" ng-click="createNew()"><i class="fa fa-plus"></i> Create New</button>
        <div class="table-scrollable">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th style="width: 20%">Name</th>
                    <th style="width: 60%">Address</th>
                    <th style="width: 20%">Action</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="h in houses">
                    <td>{{::h.Name}}</td>
                    <td>{{::h.Address}}</td>
                    <td>
                        <button type="button" class="btn yellow btn-sm" ng-click="edit(h)"><i class="fa fa-edit" ></i> Edit</button>
                        <button type="button" class="btn red btn-sm" ng-click="confirmDelete(h)"><i class="fa fa-remove" ></i> Delete</button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->
