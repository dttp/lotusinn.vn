<body ng-app="lotusInnApp" ng-controller="home" ng-init="init()" class="menu-always-on-top">
    <!-- Header BEGIN -->
    <div class="header header-mobi-ext">
        <div class="container">
            <div class="row">
                <!-- Logo BEGIN -->
                <div class="col-md-3 col-sm-3">
                    <a class="scroll site-logo" href="#home-block">
                        <img src="~/app/assets/images/logo.png" alt="Logo">
                        <span>Lotus Inn</span>
                    </a>
                </div>
                <!-- Logo END -->
                <a href="javascript:void(0);" class="mobi-toggler"><i class="fa fa-bars"></i></a>
                <!-- Navigation BEGIN -->
                <div class="col-md-9 pull-right">
                    <ul class="header-navigation">
                        <li class="current"><a href="#home">Home</a></li>
                        <li><a href="#about">About Us</a></li>
                        <li><a href="#services">Services</a></li>
                        <li><a href="#gallery">Photo</a></li>
                        <li><a href="#pricing">Pricing</a></li>
                        <li><a href="#contact">Contact</a></li>
                        <li><a href="/reservation">Reservation</a></li>
                    </ul>
                </div>
                <!-- Navigation END -->
            </div>
        </div>
    </div>
    <!-- Header END -->
    <!-- Home BEGIN -->
    <div class="home-block" id="home">
        <div class="container-fluid">
            <div class="homeinfo">
                <p class="animated slideInLeft company-desc">Serviced Apartment</p>                
                <p class="animated slideInUp hotline">
                    Call Us <br/>
                    <a href="tel:0908869889">090 886 9889</a> Or <a href="tel:0934591188">093 459 1188</a>
                </p>
            </div>
            
            <ul class="bxslider">
                <li>
                    <div class="slide slide1">
                        
                    </div>                    
                </li>
                <li><div class="slide slide2"></div></li>
                <li><div class="slide slide3"></div></li>                
            </ul>

        </div>
    </div>
    <!-- Home BEGIN -->
    <!-- About Us block BEGIN -->
    <div class="about-block content content-center" id="about">
        <div class="container">
            <h2 ><strong>Lotus </strong> Inn</h2>
            <h4 class="margin-bottom-50">Serviced apartment</h4>
            <div class="row">
                <div style="text-align: left" class="col-md-12 col-sm-12 col-xs-12 article" ng-bind-html="trustAsHtml(aboutArticle.Content)"></div>
            </div>
        </div>
    </div>
    <!-- Services block END -->
    <!-- Services block BEGIN -->
    <div class="services-block content content-center" id="services">
        <div class="container">
            <h2 class="margin-bottom-50"><strong>SERVICE</strong> AND AMENITIES</h2>            
            <div class="row" ng-repeat="row in facilities">
                <div class="col-md-3 col-sm-3 col-xs-6 item" ng-repeat="facilityItem in row">
                    <span><img ng-src="{{getIcon(facilityItem)}}"/></span>
                    <h3>{{facilityItem.Name}}</h3>                                        
                </div>
            </div>

            <div class="row">
                <div style="text-align: left" class="col-md-12 col-sm-12 col-xs-12 article" ng-bind-html="trustAsHtml(serviceInfo.Article.Content)"></div>
            </div>
        </div>
    </div>
    <!-- Services block END -->
    <!-- portfolio block BEGIN -->
    <div class="portfolio-block content content-center" id="gallery">
        <div class="container">
            <h2>
                <strong>Photo </strong> Gallery
            </h2>
            <h4 class="margin-bottom-50">Choose a house and see the photos</h4>
            <div class="row">
                <div class="tabbable-line custom-tabs">
                    <ul class="nav nav-tabs">
                        <li ng-repeat="house in houses" ng-class="{'active': $first}">
                            <a href="#tab_gallery_{{house.Id}}" data-toggle="tab">{{house.Name}}</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane" id="tab_gallery_{{house.Id}}" ng-repeat="house in houses" ng-class="{'active': $first}">
                            <div class="row">
                                <div class="album col-md-3 col-sm-6 col-xs-12" ng-repeat="album in getAlbums(house.Id)">
                                    <img ng-src="{{album.thumbnail}}" alt="{{album.name}}" ng-click="showAlbum(album)" class="album-thumbnail">
                                    <a href="" class="valign-center" ng-click="showAlbum(album)" id="{{album.id}}">
                                        <div class="valign-center-elem">
                                            <strong>{{album.name}}</strong>
                                            <br/>
                                            <em>{{album.description}}</em>
                                        </div>
                                    </a>
                                    <div class="album-images">
                                        <a href="{{item.imagePath}}" light-gallery rel="{{album.id}}" ng-repeat="item in album.items" data-sub-html="{{item.description}}">
                                            <img ng-src="{{item.imagePath}}" alt="{{item.name}}" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <!-- portfolio block END -->
    <!-- Pricing block BEGIN -->
    <div class="pricing-block content content-center" id="pricing">
        <div class="container">
            <h2 ><strong>Pricing</strong> table</h2>
            <h4 class="margin-bottom-50">Choose a house and see the pricing table below</h4>
            <div class="row" style="margin-top: 20px">
                <div class="tabbable-line custom-tabs">
                    <ul class="nav nav-tabs">
                        <li ng-repeat="house in houses" ng-class="{'active': $first}">
                            <a href="#tab_{{house.Id}}" data-toggle="tab">{{house.Name}}</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane" id="tab_{{house.Id}}" ng-repeat="house in houses" ng-class="{'active': $first}">
                            <div class="row" style="display: flex; flex-flow: row wrap; justify-content: space-around; align-items: flex-start;">
                                <div class="col-md-3 col-sm-6 col-xs-12"  ng-repeat="room in filterRoomTypesByHouse(house)">
                                    <div class="pricing-item">
                                        <div class="pricing-head">
                                            <h3>{{room.Name}}</h3>
                                        </div>
                                        <div class="pricing-content">
                                            <div class="pi-price">
                                                <strong>$<em>{{room.Price}}</em></strong>
                                                <p>Per Month</p>
                                            </div>
                                            <ul class="list-unstyled">
                                                <li ng-repeat="feature in room.Features">
                                                    <i class="fa fa-circle"></i>
                                                    {{feature}}
                                                </li>
                                                <li>
                                                    <i class="fa fa-circle"></i>
                                                    <a href="" ng-click="showImages(room)">Images</a>
                                                </li>
                                                <li>
                                                    <i class="fa fa-circle"></i>
                                                    <a href="#room-info-{{room.Id}}" fancybox class="fancybox">More info</a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="pricing-footer">
                                            <a class="btn btn-default" href="#" ng-click="reserve(room)">Reservation</a>
                                        </div>

                                        <div style="display: none;">
                                            <div id="room-info-{{room.Id}}" ng-bind-html="trustAsHtml(room.Article.Content)"></div>
                                        </div>
                                        <div class="room-images" style="display: none;">
                                            <a href="{{item.imagePath}}" light-gallery rel="{{room.Id}}" ng-repeat="item in room.Images" data-sub-html="{{item.description}}">
                                                <img ng-src="{{item.imagePath}}" alt="{{item.name}}"/>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Pricing block END -->

    <!-- Contact block BEGIN -->
    <div class="contact-block content" id="contact">
        <div class="container">
            <h2 class="margin-bottom-50">Contact <strong>Us</strong></h2>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <!---Google map -->
                    <map center="{{mapInfo.center}}" zoom="{{mapInfo.zoom}}" style="height: 350px;">
                        <marker ng-repeat="marker in mapInfo.markers" position="{{marker.position}}"></marker>
                    </map>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12 contact-form content-center">
                    <h3>LOTUS INN - SERVICED APARTMENT</h3>
                    <div ng-bind-html="trustAsHtml(contactArticle.Content)" style="text-align: left" class="article"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <h3 class="content-center">SEND US YOUR FEEDBACK</h3>
                    <form class="form form-horizontal" name="feedbackForm">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-md-3 col-sm-12">
                                    Your Name
                                    <span class="required" aria-required="true">*</span>
                                </label>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <input name="name" class="form-control" type="text" ng-model="feedback.name" placeholder="Enter your name" required/>
                                    <p class="help-block" ng-show="feedbackForm.name.$dirty && feedbackForm.name.$error.required">Your name is required</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-md-3 col-sm-12">
                                    Your Email
                                    <span class="required" aria-required="true">*</span>
                                </label>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <input name="email" class="form-control" type="email" ng-model="feedback.email" placeholder="Enter your email" required/>
                                    <p class="help-block" ng-show="feedbackForm.email.$dirty && feedbackForm.email.$error.required">Email is required</p>
                                    <p class="help-block" ng-show="feedbackForm.email.$dirty && feedbackForm.email.$error.email">Incorrect email address</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-md-3 col-sm-12">
                                    Your Message
                                    <span class="required" aria-required="true">*</span>
                                </label>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <textarea class="form-control" name="message" rows="4" ng-model="feedback.message" required></textarea>
                                    <p class="help-block" ng-show="feedbackForm.message.$dirty && feedbackForm.message.$error.required">Message is required</p>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions" style="background: none" >
                            <div class="row">
                                <div class="col-lg-offset-3 col-lg-6 col-md-6 text-left">
                                    <button class="btn btn-primary" disabled="disabled" ng-disabled="feedbackForm.$invalid" ng-click="sendFeedback()">Send</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact block END -->

    <!-- Footer block BEGIN -->
    <div class="footer">
        <div class="container">
            <div class="row">
                <!-- BEGIN COPYRIGHT -->
                <div class="col-md-6 col-sm-6">
                    <div class="copyright">2015 © GV Limited Company. ALL Rights Reserved.</div>
                </div>
                <!-- END COPYRIGHT -->
                <div class="col-md-6 col-sm-6">
                    <ul class="social-icons">
                        <li ng-repeat="svc in socialServices">
                            <a class="{{svc.Name}}" data-original-title="{{svc.Name}}" href="{{svc.Link}}" target="_blank"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
